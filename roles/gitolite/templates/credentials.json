{
  "redis_key": "{{ redis_key }}",
  "redis_host": "{{ redis_ip }}",
  "redis_port": 6379,
  "bugsnag_key": "{{ bugsnag_key }}",
  "db": "mongodb://{{ mongodb_auth }}@{{ mongo_ip }}/ng",
  "networkDb": "mongodb://{{ mongodb_auth }}@{{ mongo_ip }}/ngNetwork",
  "db_options": {
          "auto_reconnect": true,
          "native_parser": true,
          "server": {
                  "auto_reconnect": true
          }
  },
  "networkDb_options": {
          "auto_reconnect": true,
          "native_parser": true,
          "server": {
                  "auto_reconnect": true
          }
  },
  "gitolite": "/root/gitolite/"
}